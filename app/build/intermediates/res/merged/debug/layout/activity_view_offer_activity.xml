<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                tools:context=".Activity.View_offer_activity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>

    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView3"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/entreprise"
                android:id="@+id/viewJobTextView"
                android:textSize="@dimen/sub_title2"
                android:textStyle="bold" />

            <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/viewJobEditText"
                android:textSize="@dimen/text1"
                android:textStyle="italic"
                android:focusable="false"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/intitule_post"
                android:id="@+id/jobTitleTextView"
                android:textSize="@dimen/sub_title2"
                android:textStyle="bold" />

            <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/jobTitleEditText2"
                android:focusable="false"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/type"
                android:id="@+id/viewTypeTextView"
                android:textStyle="bold"
                android:textSize="@dimen/sub_title2" />

            <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/viewTypeEditText"
                android:focusable="false"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/typeRadioGroup"
                android:visibility="gone"
                android:orientation="horizontal">

                    <RadioButton

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CDI"
                        android:id="@+id/cdiRadioButton2"
                        android:textSize="@dimen/text1"
                        android:textStyle="italic" />

                    <RadioButton

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CDD"
                        android:id="@+id/cddRadioButton2"
                        android:textSize="@dimen/text1"
                        android:textStyle="italic" />

                    <RadioButton

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stage"
                        android:id="@+id/internRadioButton2"
                        android:textStyle="italic"
                        android:textSize="@dimen/text1" />

            </RadioGroup>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/domaine"
                android:id="@+id/viewAreaTextView"
                android:textSize="@dimen/sub_title2"
                android:textStyle="bold" />

            <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/viewAreaEditText"
                android:textStyle="italic"
                android:textSize="@dimen/text1"
                android:focusable="false"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/lieu"
                android:id="@+id/viewLocationTextView"
                android:textStyle="bold"
                android:textSize="@dimen/sub_title2" />

            <AutoCompleteTextView
                android:id="@+id/locationEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title_location"
                android:inputType="textCapSentences"
                android:textSize="@dimen/text1"
                android:textStyle="italic"
                android:focusable="false">


            </AutoCompleteTextView>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/comp_nec"
                android:id="@+id/viewSkillsTextView"
                android:textSize="@dimen/sub_title2"
                android:textStyle="bold" />

            <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/viewSkillsTextEdit"
                android:textSize="@dimen/text1"
                android:textStyle="italic"
                android:focusable="false"/>

            <Button

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/finish_modification"
                android:id="@+id/finishModification"
                android:textColor="@color/white"
                android:background="@drawable/shape"
                android:visibility="gone"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
</LinearLayout>

