<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      xmlns:tools="http://schemas.android.com/tools"
                      android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      tools:context="com.example.ergasia.Activity.ProfilFragmentPost">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/nom"
                android:id="@+id/name"
                android:textSize="@dimen/sub_title2"
                android:textStyle="bold"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editName"
                android:selectAllOnFocus="false"
                android:textStyle="italic"
                android:textSize="@dimen/text1"
                android:focusable="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/prenom"
                android:id="@+id/firstName"
                android:textSize="@dimen/sub_title2"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editFirstName"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/text1"
                android:textStyle="italic"
                android:focusable="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/formation"
                android:id="@+id/training"
                android:textSize="@dimen/sub_title2"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/trainingEditText"
                android:textSize="@dimen/text1"
                android:textStyle="italic"
                android:focusable="false"
                />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:id="@+id/trainingSpinner"
                android:spinnerMode="dropdown"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/domaine"
                android:id="@+id/area"
                android:textSize="@dimen/sub_title2"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editArea"
                android:textSize="@dimen/text1"
                android:textStyle="italic"
                android:focusable="false"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/type"
                android:id="@+id/type"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="@dimen/sub_title2"
                android:textStyle="bold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editType"
                android:textStyle="italic"
                android:textSize="@dimen/text1"
                android:focusable="false"
                />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/radioButtonType"
                android:visibility="gone">


                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CDI"
                    android:id="@+id/radioButtonCdi"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CDD"
                    android:id="@+id/radioButtonCdd"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stage"
                    android:id="@+id/radioButtonIntern"/>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/langues"
                android:id="@+id/language"
                android:textSize="@dimen/sub_title2"
                android:textStyle="bold" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/editLanguage1"
                        android:minWidth="@dimen/lang_dimension"
                        android:textSize="@dimen/text1"
                        android:textStyle="italic"
                        android:focusable="false"
                        />

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ratingBar1"
                        android:layout_column="1"
                        android:numStars="3"
                        android:isIndicator="true"
                        android:focusable="false"/>
                </TableRow>
            </TableLayout>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editLanguage2"
                    android:minWidth="@dimen/lang_dimension"
                    android:visibility="visible"
                    android:focusable="false"
                    />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBar2"
                    android:numStars="3"
                    android:visibility="visible"
                    android:isIndicator="true"
                    android:focusable="false"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editLanguage3"
                    android:minWidth="@dimen/lang_dimension"
                    android:focusable="false"
                    />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBar3"
                    android:numStars="3"
                    android:isIndicator="true"
                    android:focusable="false"/>
            </TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/competences"
                android:id="@+id/skills"
                android:textSize="@dimen/sub_title2"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/skillsEditText"
                android:textStyle="italic"
                android:textSize="@dimen/text1"
                android:focusable="false"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/geoloc"
                android:id="@+id/geolocation"
                android:textSize="@dimen/sub_title2"
                android:textStyle="bold"
                />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enable:"
                android:id="@+id/geolocSwitch"
                android:layout_gravity="center_horizontal"
                android:checked="false" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar"
                android:layout_gravity="center_horizontal" />

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lieu"
                android:id="@+id/locationEditText"
                android:textStyle="italic"
                android:textSize="@dimen/text1"
                android:focusable="false"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/finish_modification"
                android:id="@+id/finishModification"
                android:textColor="@color/white"
                android:background="@color/ergasiagreen"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>